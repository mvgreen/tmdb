<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="16dp">

    <ImageButton
        android:id="@+id/button_back"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_arrow_back"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="40dp"
        android:background="@android:color/transparent" />

    <ImageView
        android:id="@+id/poster"
        android:layout_width="64dp"
        android:layout_height="96dp"
        app:layout_constraintTop_toBottomOf="@id/button_back"
        android:layout_marginTop="25dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/stub_poster" />

    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:lines="2"
        android:ellipsize="end"
        app:layout_constraintTop_toBottomOf="@id/button_back"
        android:layout_marginTop="30dp"
        app:layout_constraintLeft_toRightOf="@id/poster"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="16dp"
        android:text="Удивительное путешествие доктора Дулиттла"
        style="@style/h3_light"/>

    <TextView
        android:id="@+id/title_original"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:lines="1"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="Dolittle (2020)"
        style="@style/caption2_gray"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintLeft_toLeftOf="@id/title"
        android:layout_marginTop="6dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/genre"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:lines="1"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="фэнтези, боевик, комедия"
        style="@style/caption2_light"
        app:layout_constraintTop_toBottomOf="@id/title_original"
        app:layout_constraintLeft_toLeftOf="@id/title"
        android:layout_marginTop="6dp"
        app:layout_constraintRight_toRightOf="parent" />


    <TextView
        android:id="@+id/textview_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Время"
        style="@style/caption2_gray"
        app:layout_constraintTop_toBottomOf="@id/poster"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="19dp" />

    <TextView
        android:id="@+id/length"
        style="@style/h3_light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="91"
        android:layout_marginTop="2dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textview_time" />

    <TextView
        android:id="@+id/textview_min"
        style="@style/sfpro_light_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1dp"
        android:text="мин"
        app:layout_constraintLeft_toRightOf="@id/length"
        app:layout_constraintBottom_toBottomOf="@id/length" />



    <TextView
        android:id="@+id/textview_rating"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Рейтинг фильма"
        style="@style/caption2_gray"
        app:layout_constraintTop_toBottomOf="@id/poster"
        app:layout_constraintLeft_toLeftOf="@id/title"
        android:layout_marginTop="19dp" />

    <TextView
        android:id="@+id/score"
        style="@style/h3_light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6.1"
        android:layout_marginTop="2dp"
        app:layout_constraintLeft_toLeftOf="@id/textview_rating"
        app:layout_constraintTop_toBottomOf="@id/textview_time" />

    <TextView
        android:id="@+id/vote_count"
        style="@style/sfpro_gray_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:text="4 832"
        app:layout_constraintLeft_toRightOf="@id/score"
        app:layout_constraintBottom_toBottomOf="@id/score" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/dark_blue"
        app:layout_constraintTop_toBottomOf="@id/length"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/divider"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="21dp"
        android:scrollbars="vertical"
        style="@style/sfpro_light_big"
        android:text="@string/stub_description"/>


</androidx.constraintlayout.widget.ConstraintLayout>