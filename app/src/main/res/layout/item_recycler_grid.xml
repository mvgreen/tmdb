<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="152dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/poster"
        android:layout_width="152dp"
        android:layout_height="208dp"
        android:src="@drawable/stub_poster"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title"
        style="@style/h3_light"
        android:text="Удивительное путешествие доктора Дулиттла"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="2"
        app:layout_constraintTop_toBottomOf="@id/poster" />

    <TextView
        android:id="@+id/subtitle"
        style="@style/caption2_gray"
        android:text="Dolittle (2020)"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:lines="1"
        android:maxLines="1"
        app:layout_constraintTop_toBottomOf="@id/title" />

    <TextView
        android:id="@+id/genre"
        style="@style/caption2_light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="фэнтези, боевик, комедия"
        android:ellipsize="end"
        android:maxLines="2"
        app:layout_constraintTop_toBottomOf="@id/subtitle" />

    <TextView
        android:id="@+id/score"
        style="@style/sfpro_light_big"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6.1"
        app:layout_constraintLeft_toLeftOf="@id/genre"
        app:layout_constraintTop_toBottomOf="@id/genre" />

    <TextView
        android:id="@+id/vote_count"
        style="@style/sfpro_gray_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:text="4 832"
        app:layout_constraintBottom_toBottomOf="@id/score"
        app:layout_constraintLeft_toRightOf="@id/score" />


</androidx.constraintlayout.widget.ConstraintLayout>