<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/bg_black</item>
        <item name="colorPrimaryDark">@color/bg_black</item>
        <item name="colorAccent">@color/dark_blue</item>
        <item name="android:windowBackground">@color/bg_black</item>
        <item name="background">@color/bg_black</item>
        <item name="android:navigationBarColor">@color/bg_black</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="ActionBarStyle">
        <item name="titleTextColor">@color/light</item>
        <item name="titleTextAppearance">@style/H1</item>
    </style>

    <!-- Элементы интерфейса -->
    <style name="text_input_layout_style" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">@color/gray</item>
        <item name="hintTextColor">@color/gray</item>
        <item name="hintTextAppearance">@style/caption2</item>

        <item name="boxStrokeColor">@color/input_layout_outline_color</item>
        <item name="boxStrokeWidth">2dp</item>

        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
    </style>

    <style name="text_input_layout_style.password">
        <item name="passwordToggleEnabled">true</item>
        <item name="passwordToggleDrawable">@drawable/visibility_selector</item>
        <item name="passwordToggleTint">@color/gray</item>
    </style>

    <style name="text_input_style">
        <item name="android:textAppearance">@style/content1</item>
        <item name="android:textColor">@color/light</item>
        <item name="android:textSelectHandle">@drawable/cursor</item>
        <item name="android:textSelectHandleLeft">@drawable/cursor_left</item>
        <item name="android:textSelectHandleRight">@drawable/cursor_right</item>
    </style>

    <style name="orange_button">
        <item name="android:background">@drawable/btn_selector_orange</item>
        <item name="android:stateListAnimator">@null</item>

        <item name="android:textAppearance">@style/button_text</item>
        <item name="android:textColor">@color/button_text_color_selector_light</item>
    </style>

    <style name="dark_button">
        <item name="android:background">@drawable/btn_selector_dark</item>
        <item name="android:stateListAnimator">@null</item>

        <item name="android:textAppearance">@style/button_text</item>
        <item name="android:textColor">@color/button_text_color_selector_purple</item>
    </style>

    <!-- Стили текста -->

    <style name="h1_light">
        <item name="android:textAppearance">@style/H1</item>
        <item name="android:textColor">@color/light</item>
    </style>

    <style name="content1_light">
        <item name="android:textAppearance">@style/content1</item>
        <item name="android:textColor">@color/light</item>
    </style>

    <style name="content1_red">
        <item name="android:textAppearance">@style/content1</item>
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="content1_gray">
        <item name="android:textAppearance">@style/content1</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <!-- Шрифты -->
    <style name="H1">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="H2">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="H3">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="content1">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="content2">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="caption1">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="caption2">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="button_text">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="link_text">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>
